<!--index.wxml-->
<tabBar></tabBar>
<view>
  <view class="albums">
    <block wx:for="{{albums}}" wx:key="id" wx:for-index="idx" wx:for-item="album">
      <navigator url="/pages/photos/photos?id={{idx}}">
      <view class="album {{idx%2==0?'album-left':'album-right'}}">
        <view class='first-photo'>
          <view style="background-image: url({{album.coverURL}})"></view>
        </view> 
        <view class='album-info'>
            <view class="name">{{album.albumName}}</view>
            <view class="photo-total">{{album.photos.length}} å¼ </view>
        </view>
      </view>
      </navigator>
      <!-- <image src="{{album.path}}"></image> -->
    </block>
    <view style="clear: both"></view>
  </view>
  
  <view class='options'>
    <navigator class='add-item' url='/pages/album/add'>
      <!-- <image class='add-item' src='https://ftp.bmp.ovh/imgs/2021/04/31381855e288f89c.png'></image> -->
      <image class='add-item' src='http://breathroom.oss-cn-chengdu.aliyuncs.com/icons/addAlbum.png'></image>
    </navigator>      
  </view>
  
  </view>
  