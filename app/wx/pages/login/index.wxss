.top {
  width: 100%;
  height: 450rpx;
  background: #23EBB9;
  padding-top: 55rpx;
  position: relative;
  align-items: center;
}

.top-word{
  width: 80%;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5rpx;
  align-items: center;
}

.top-text{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5px;
  color:white;
  font-size: 38rpx;
  align-items: center;
  font-weight: 700;
}

.center {
  width: 60%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 15rpx;
}
