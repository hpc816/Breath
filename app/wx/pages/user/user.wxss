page {
  background: #F2F2F2
}

.container{
  padding-top: 120px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  /* margin-bottom: 70px; */
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo > button {
  background-color: #fdc21c;
  border: 0 transparent solid;
  color: #fff;
  font-size: 16px;
  height: 45px;
  line-height: 32px;
}

.userinfo > .hint {
  margin-top: 20px;
}
